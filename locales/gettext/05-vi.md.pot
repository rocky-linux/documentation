#. type: Plain text
#: docs/books/admin_guide/05-vi.md:265
msgid "### Words"
msgstr ""

#. type: Bullet: '* '
#: docs/books/admin_guide/05-vi.md:267
msgid "Delete (cut) one or `n` words:"
msgstr ""

#. type: Plain text
#: docs/books/admin_guide/05-vi.md:269
msgid "<kbd>d</kbd><kbd>w</kbd> or <kbd>n</kbd><kbd>d</kbd><kbd>w</kbd>"
msgstr ""

#. type: Bullet: '* '
#: docs/books/admin_guide/05-vi.md:271
msgid "Copy one or `n` words:"
msgstr ""

#. type: Plain text
#: docs/books/admin_guide/05-vi.md:273
msgid "<kbd>y</kbd><kbd>w</kbd> or <kbd>n</kbd><kbd>y</kbd><kbd>w</kbd>"
msgstr ""

#. type: Bullet: '* '
#: docs/books/admin_guide/05-vi.md:275
msgid "Paste a word once or `n` times after the cursor:"
msgstr ""

#. type: Plain text
#: docs/books/admin_guide/05-vi.md:277 docs/books/admin_guide/05-vi.md:303
msgid "<kbd>p</kbd> or <kbd>n</kbd><kbd>p</kbd>"
msgstr ""

#. type: Bullet: '* '
#: docs/books/admin_guide/05-vi.md:279
msgid "Paste a word once or `n` times before the cursor:"
msgstr ""

#. type: Plain text
#: docs/books/admin_guide/05-vi.md:281 docs/books/admin_guide/05-vi.md:307
msgid "<kbd>P</kbd> or <kbd>n</kbd><kbd>P</kbd>"
msgstr ""

#. type: Bullet: '* '
#: docs/books/admin_guide/05-vi.md:283
msgid "Replace one word:"
msgstr ""

#. type: Plain text
#: docs/books/admin_guide/05-vi.md:285
msgid "<kbd>c</kbd><kbd>w</kbd><kbd>_word_</kbd><kbd>ESC</kbd>"
msgstr ""

#. type: Plain text
#: docs/books/admin_guide/05-vi.md:289
#, no-wrap
msgid ""
"!!! Tip\n"
"    It is necessary to position the cursor under the first character of the word to cut (or copy) otherwise VI will cut (or copy) only the part of the word between the cursor and the end.\n"
"    To delete a word is to cut it. If it is not pasted afterwards, the buffer is emptied and the word is deleted.\n"
msgstr ""

#. type: Plain text
#: docs/books/admin_guide/05-vi.md:291
msgid "### Lines"
msgstr ""

#. type: Bullet: '* '
#: docs/books/admin_guide/05-vi.md:293
msgid "Delete (cut) one or `n` lines:"
