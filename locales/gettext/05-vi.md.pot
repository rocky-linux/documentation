#. type: Plain text
#: docs/books/admin_guide/05-vi.md:295
msgid "<kbd>d</kbd><kbd>d</kbd> or <kbd>n</kbd><kbd>d</kbd><kbd>d</kbd>"
msgstr ""

#. type: Bullet: '* '
#: docs/books/admin_guide/05-vi.md:297
msgid "Copy one or `n` lines:"
