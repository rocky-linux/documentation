#. type: Plain text
#: docs/books/admin_guide/05-vi.md:299
msgid "<kbd>y</kbd><kbd>y</kbd> or <kbd>n</kbd><kbd>y</kbd><kbd>y</kbd>"
msgstr ""

#. type: Bullet: '* '
#: docs/books/admin_guide/05-vi.md:301
msgid ""
"Paste what has been copied or deleted once or `n` times after the current "
"line:"
msgstr ""

#. type: Bullet: '* '
#: docs/books/admin_guide/05-vi.md:305
msgid ""
"Paste what has been copied or deleted once or `n` times before the current "
"line:"
msgstr ""

#. type: Bullet: '* '
#: docs/books/admin_guide/05-vi.md:309
msgid "Delete (cut) from the beginning of the line to the cursor:"
msgstr ""

#. type: Plain text
#: docs/books/admin_guide/05-vi.md:311
msgid "<kbd>d</kbd><kbd>0</kbd>"
msgstr ""

#. type: Bullet: '* '
#: docs/books/admin_guide/05-vi.md:313
msgid "Delete (cut) from the cursor to the end of the line:"
msgstr ""

#. type: Plain text
#: docs/books/admin_guide/05-vi.md:315
msgid "<kbd>d</kbd><kbd>$</kbd>"
msgstr ""

#. type: Bullet: '* '
#: docs/books/admin_guide/05-vi.md:317
msgid "Copy from the beginning of the line to the cursor:"
msgstr ""

#. type: Plain text
#: docs/books/admin_guide/05-vi.md:319
msgid "<kbd>y</kbd><kbd>0</kbd>"
msgstr ""

#. type: Bullet: '* '
#: docs/books/admin_guide/05-vi.md:321
msgid "Copy from the cursor to the end of the line:"
msgstr ""

#. type: Plain text
#: docs/books/admin_guide/05-vi.md:323
msgid "<kbd>y</kbd><kbd>$</kbd>"
msgstr ""

#. type: Bullet: '* '
#: docs/books/admin_guide/05-vi.md:325
msgid "Delete (cut) the text from the current line:"
msgstr ""

#. type: Plain text
#: docs/books/admin_guide/05-vi.md:327
msgid "<kbd>d</kbd><kbd>L</kbd> or <kbd>d</kbd><kbd>G</kbd>"
msgstr ""

#. type: Bullet: '* '
#: docs/books/admin_guide/05-vi.md:329
msgid "Copy the text from the current line:"
msgstr ""

#. type: Plain text
#: docs/books/admin_guide/05-vi.md:331
msgid "<kbd>y</kbd><kbd>L</kbd> or <kbd>y</kbd><kbd>G</kbd>"
msgstr ""

